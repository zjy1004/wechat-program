/* pages/waybillDetail/waybillDetail.wxss */
.waybillDetail {
  display: flex;
  flex: 1;
  flex-direction: column;
}
.waybiiInfo {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 210rpx;
  align-items: center;
  justify-content: center;
  background:linear-gradient(45deg,rgba(82,132,232,1),rgba(101,142,244,1),rgba(90,128,224,1));
}
.waybiiInfo .left {
  display: flex;
  height: 100%;
  flex: 2;
  justify-content: center;
  align-items: center;

}
.waybiiInfo .left .imgCar {
  width: 100rpx;
  height: 100rpx;
}
.waybiiInfo .mid {
  display: flex;
  flex-direction: column;
  height: 100%;
  flex: 7;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #FFF;
}
.waybiiInfo .right {
  display: flex;
  height: 100%;
  flex: 1;
  justify-content: center;
  align-items: center;
}
.rightArrow {
  width: 44rpx;
  height: 44rpx;
}
.phone .van-cell__value  {
  color: #4A7FE8;
}
.waybillNumCss .van-cell__value {
  flex: 2;
}