/* pages/mine/mine.wxss */
.mine {
  display: flex;
  flex: 1;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  background: #FFF;
}
.user-box {
  width: 100%;
  height: 360rpx;
  background-color: #4A7FE8;
  display: flex;
  flex-direction: row;
}
.user-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #fff;
  margin-top: 140rpx;
  margin-left: 40rpx; 
}
.user-icon image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-name {
  height: 80rpx;
  width: 400rpx;
  line-height: 80rpx;
  background-color: #4A7FE8;
  font-size: 40rpx;
  color: #EBF1FF;
  margin-top: 160rpx;
  margin-left: 20rpx;
}
.loginBtnCss {
  height: 80rpx;
  margin-top: 160rpx;
  position: absolute;
  left: 150px;

}
.aurh-btn {
  margin-top: 10rpx;
  height: 70rpx;
  width: 200rpx;
  line-height: 70rpx;
  background-color: #fff;
  color: #0066FF;
}
.user-waybill {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
}
.waybill-tatol {
  width: 90%;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  background: #FFF;
  box-shadow:0px 2px 10px 0px rgba(122,122,122,0.2);
  border-radius:5px;
  position: relative;
  top: -60rpx;
}
.waybill-tatol-list {
  
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  
  flex-direction: column;
}
.waybill-tatol-list:first-child {
  border-right: 2rpx solid #E2E2E2;
}
.Statistics {
  font-size: 26rpx;
  color: #8A9099;
}
.Statistics_num {
  font-size: 46rpx;
  color: #24282E;
}
.cell-list {
  width: 100%;
  display: flex;
  flex: 1;
  flex-direction: column;
}
/* 绑定手机号 */
.mine .van-popup {
  top: 40% !important;
}
.bindPhone-content {
  width: 540rpx;
  height: 390rpx;
  padding: 40rpx 50rpx;
}
.bindPhone-title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #24282E;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 40rpx;
}
.bindPhone-item {
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.bindPhone-label {
  width: 100rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  color: #24282E;
}
.bindPhone-item input {
  width: 100%;
  height: 100%;
}
.phone-input {
  width: 420rpx;
  height: 64rpx;
  padding-left: 20rpx;
  border: 1rpx solid #D6D6D6;
}
.code-input {
  width: 240rpx;
  height: 64rpx;
  padding-left: 20rpx;
  border: 1rpx solid #D6D6D6;
}
.code-btn {
  width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  color: #4A7FE8;
  border: 1rpx solid #D6D6D6;
  margin-left: 20rpx;
  font-size: 26rpx;
}
.bindPhone-sure {
  width: 100%;
  height: 130rpx;
  display: flex;
  /* align-items: center; */
  justify-content: center;
}
.sure-btn {
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 50rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #4A7FE8;
  border-radius: 10rpx
}